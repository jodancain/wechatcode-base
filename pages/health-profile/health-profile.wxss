/* pages/health-profile/health-profile.wxss */
.container {
  padding: 40rpx 30rpx;
  background-color: #f4f7f9;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

.form-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.card .form-group:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
}

.input {
  text-align: right;
  font-size: 30rpx;
}

.picker {
  font-size: 30rpx;
  color: #666;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.checkbox {
  font-size: 28rpx;
  width: 33.33%;
  margin-bottom: 20rpx;
}

.submit-btn {
  background-color: #007aff;
  color: white;
  margin-top: 40rpx;
}
