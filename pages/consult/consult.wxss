/* pages/consult/consult.wxss */
.page-consult {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

/* Search Bar */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.4;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* Doctor List */
.doctor-list {
  width: 100%;
}

.doctor-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.doctor-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.doctor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-header {
  display: flex;
  align-items: center;
}

.doctor-name {
  font-size: 34rpx;
  font-weight: bold;
}

.doctor-title {
  font-size: 24rpx;
  color: #4a90e2;
  border: 1rpx solid #4a90e2;
  border-radius: 8rpx;
  padding: 2rpx 10rpx;
  margin-left: 15rpx;
}

.doctor-hospital,
.doctor-intro,
.doctor-services {
  font-size: 26rpx;
  color: #666;
}

.doctor-stats {
  font-size: 24rpx;
  color: #999;
}

.divider {
  margin: 0 10rpx;
}

.consult-button {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background-color: #4a90e2;
  color: white;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  line-height: 1.5;
  /* Reset default button styles */
  border: none;
  text-align: center;
}

.consult-button::after {
  border: none;
}
