/* pages/video/video.wxss */
.page-video {
  background-color: #fff;
  min-height: 100vh;
}

/* Category Tabs */
.category-tabs {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  display: inline-block;
  font-size: 30rpx;
  color: #666;
  margin-right: 40rpx;
  padding-bottom: 15rpx;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4a90e2;
  border-radius: 3rpx;
}

/* Main Content */
.video-content {
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
}

/* Video Grid */
.video-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.video-card {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.video-thumbnail {
  width: 100%;
  height: 200rpx;
  background-color: #f0f0f0;
}

.video-info {
  padding: 20rpx;
}

.video-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-doctor {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
