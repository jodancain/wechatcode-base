/* pages/profile/profile.wxss */
.page-profile {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* Header */
.profile-header {
  background-color: #4a90e2;
  color: white;
  display: flex;
  align-items: center;
  padding: 80rpx 40rpx 40rpx;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-info {
  margin-left: 30rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.header-actions {
  position: absolute;
  right: 40rpx;
  top: 100rpx;
  display: flex;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
  filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(200%) contrast(100%);
}

/* Cards */
.profile-card {
  background-color: #ffffff;
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.profile-card:first-of-type {
  margin-top: -40rpx;
  position: relative;
  z-index: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* Grid Container */
.grid-container {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.grid-container.grid-3 .grid-item {
  width: 33.33%;
}
.grid-container.grid-4 .grid-item {
  width: 25%;
}

.grid-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.grid-text {
  font-size: 24rpx;
  color: #333;
}

/* Service Packages */
.service-container {
  display: flex;
  justify-content: space-between;
}

.service-item {
  width: 48%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 16rpx;
}

.service-item.points {
  background-color: #fffbeb;
}

.service-item.mall {
  background-color: #eef8ff;
}

.points-info, .mall-info {
  display: flex;
  flex-direction: column;
}

.points-count {
  font-size: 40rpx;
  font-weight: bold;
  color: #d4a017;
}

.points-label, .mall-title {
  font-size: 28rpx;
  font-weight: bold;
}

.mall-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
}

/* Other Options List */
.list-container {
  display: flex;
  flex-direction: column;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.list-text {
  flex: 1;
  font-size: 28rpx;
}

.list-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.3;
}
