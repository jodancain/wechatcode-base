/* pages/mall/mall.wxss */
.page-mall {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* Filters */
.filters-container {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  font-size: 26rpx;
  margin-right: 40rpx;
  color: #333;
}

.main-filter.active {
  font-weight: bold;
  color: #e54d42;
}

.secondary-filter {
  background-color: #f7f8fa;
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

/* Promo Banners */
.promo-banners {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 30rpx;
}

.promo-banner {
  background-color: #fff6f5;
  color: #e54d42;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

/* Product List */
.product-list {
  padding: 0 30rpx;
}

.product-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title-row {
  display: flex;
  align-items: flex-start;
}

.tag-store {
  background-color: #e54d42;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.product-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-description {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.product-price {
  margin-top: 15rpx;
  color: #e54d42;
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
}
.price-value {
  font-size: 40rpx;
  font-weight: bold;
}
.price-original {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.product-tags {
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.tag {
  border: 1rpx solid #e54d42;
  color: #e54d42;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.product-stats, .product-store {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
.stats-divider {
  margin: 0 10rpx;
}
.store-arrow {
  margin-left: 5rpx;
}
